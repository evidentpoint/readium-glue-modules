{
  "defaultSeverity": "error",
  "extends": [
    "tslint-config-airbnb"
  ],
  "jsRules": {},
  "rules": {
    "no-console": false,
    "missing-jsdoc": false,
    "no-relative-imports": false,
    "no-default-export": false,
    "export-name": false,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "member-variable-declaration"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "ter-arrow-parens": [
      true,
      "always"
    ],
    "function-name": [
      true,
      {
        "method-regex": "^[a-z][\\w\\d]+$",
        "private-method-regex": "^(\\[.*?\\]|_[a-z$][\\w\\d]+)$",
        "protected-method-regex": "^[a-z][\\w\\d]+$",
        "static-method-regex": "^[a-z][\\w\\d]+$",
        "function-regex": "^[a-z][\\w\\d]+$"
      }
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "allow-trailing-underscore"
    ],
    "align": false
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "node_modules",
      "**/lib/**",
      "**/node_modules/**"
    ]
  }
}